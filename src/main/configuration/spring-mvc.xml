				<mvc:exclude-mapping path="/upload/**" />
				<mvc:exclude-mapping path="/favicon.ico"/>
				<mvc:exclude-mapping path="/404.jsp"/>
				<mvc:exclude-mapping path="/400.jsp"/>
				<mvc:exclude-mapping path="/500.jsp"/>
